<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x5"
            android:background="@color/colorAccent" />
        <!--第一部分-->
        <RelativeLayout
            android:id="@+id/rel_part_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--借款人担保人贷款人-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x10">
                <!--借款人-->
                <TextView
                    android:id="@+id/tv_borrower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:text="@string/tv_borrower"
                    android:textColor="@color/charcoal_grey" />

                <TextView
                    android:id="@+id/tv_borrower_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_toRightOf="@+id/tv_borrower"
                    android:text="赵四"
                    android:textColor="@color/charcoal_grey" />
                <!--贷款人-->
                <TextView
                    android:id="@+id/tv_lender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贷款人:"
                    android:textColor="@color/charcoal_grey"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_below="@+id/tv_borrower"/>
                <TextView
                    android:id="@+id/tv_lender_num"
                    android:layout_below="@+id/tv_borrower_num"
                    android:layout_toRightOf="@+id/tv_lender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/charcoal_grey"
                    android:layout_marginTop="@dimen/x5"
                    android:text="平台"/>
                <!--担保人-->
                <TextView
                    android:id="@+id/tv_guarantor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_lender"
                    android:layout_marginTop="@dimen/x5"
                    android:text="担保人:"
                    android:textColor="@color/charcoal_grey" />

                <TextView
                    android:id="@+id/tv_guarantor_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_lender_num"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_toRightOf="@+id/tv_guarantor"
                    android:text="王老板"
                    android:textColor="@color/charcoal_grey" />
            </RelativeLayout>
            <!--出票日期-->
            <RelativeLayout
                android:id="@+id/rel_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginTop="@dimen/x10">

                <!--原价和现价-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginBottom="@dimen/x10">

                    <!--借款金额-->
                    <TextView
                        android:id="@+id/loan_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_value_number"
                        android:textColor="@color/tv_money_color"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/x30"
                        android:text="¥62556" />
                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>
        <!--第二条线-->
        <View
            android:id="@+id/line_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_below="@+id/rel_part_one"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/view_line" />
        <!--借款人和贷款人-->
        <RelativeLayout
            android:id="@+id/rel_receipet_and_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_two">


            <!--还款-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_repayment"
                    android:layout_width="@dimen/x100"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginBottom="@dimen/x10"
                    android:background="@drawable/tv_approv_reject_shape"
                    android:gravity="center"
                    android:padding="@dimen/x5"
                    android:layout_centerVertical="true"
                    android:text="@string/tv_repayment"
                    android:textColor="@color/charcoal_grey" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>