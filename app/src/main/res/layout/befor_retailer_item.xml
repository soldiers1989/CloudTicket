<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x80"
    android:id="@+id/item_retailer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/x4"
    android:layout_margin="@dimen/x5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x5">
        <TextView
            android:id="@+id/retailer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:text="零售商"
            android:textColor="@color/black" />
        <!--零售商名字-->
        <TextView
            android:id="@+id/retailer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:text=""
            android:layout_below="@+id/retailer_txt"
            android:textColor="@color/black" />
        <!--零售商地址-->
        <TextView
            android:id="@+id/retailer_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:text=""
            android:layout_below="@+id/retailer_name"
            android:textColor="@color/black" />
    </RelativeLayout>

</android.support.v7.widget.CardView>