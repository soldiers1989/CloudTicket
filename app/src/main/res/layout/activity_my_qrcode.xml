        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x50"/>
<ImageView
    android:id="@+id/QR_CODE"
    android:layout_width="@dimen/x150"
    android:layout_height="@dimen/x150"
    android:layout_centerInParent="true"/>
</RelativeLayout>