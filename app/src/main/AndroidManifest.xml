<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ycgrp.cloudticket">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 相机权限，扫码获取相机 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".CloudTicketApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mvp.ui.activity.LoginActivity"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.ui.activity.RegisterActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".mvp.ui.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.ui.activity.StartCloudTicketActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".mvp.ui.activity.WaitApproveActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.ui.activity.MyCloudTicketActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.ui.activity.LoanRecordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.ui.activity.CloudTicketDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mvp.ui.activity.VerifiedActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".mvp.ui.activity.SettingActivity" />
        <activity android:name=".mvp.ui.activity.MyQRCodeActivity" />
        <activity android:name=".mvp.ui.activity.ScanActivity" />
        <activity android:name=".mvp.ui.activity.BeforRetailerActivity"></activity>
    </application>

</manifest>